{
  "compilerOptions": {
    "lib": [
      "es5",
      "es6"
    ],
    "experimentalDecorators": true,
    "module": "commonjs",
    "target": "es2015",
    "sourceMap": true,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "./",
    "outDir": "./",
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules"
  ]
}
